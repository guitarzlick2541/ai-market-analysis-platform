# AI Market Analysis Platform - Environment Variables

# =====================================================
# NEXT.JS FRONTEND
# =====================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# =====================================================
# BACKEND API
# =====================================================
PORT=8000
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/market_analysis
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-service-key

# Authentication
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =====================================================
# AI SERVICE
# =====================================================
AI_SERVICE_PORT=8001
AI_SERVICE_URL=http://localhost:8001

# Model paths (optional - defaults to HuggingFace)
FINBERT_MODEL_PATH=ProsusAI/finbert
TFT_MODEL_PATH=./models/tft/weights
LSTM_MODEL_PATH=./models/lstm/weights

# =====================================================
# MARKET DATA APIs
# =====================================================
# CoinGecko (free tier available)
COINGECKO_API_KEY=

# Alpha Vantage (for stocks - free tier available)
ALPHA_VANTAGE_API_KEY=

# CryptoCompare (optional)
CRYPTOCOMPARE_API_KEY=

# =====================================================
# EXTERNAL SERVICES
# =====================================================
# News API (optional)
NEWS_API_KEY=

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# =====================================================
# LOGGING & MONITORING
# =====================================================
LOG_LEVEL=INFO
SENTRY_DSN=
